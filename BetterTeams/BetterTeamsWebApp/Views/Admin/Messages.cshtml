@model List<BetterTeamsWebApp.Models.ViewModels.MessageVM>

    @{
        ViewBag.Title = "Messages";
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }

    <h2>Messages</h2>
    
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Sender</th>
                    <th>Receiver</th>
                    <th>Text</th>
                    <th>DateTime</th>
                    <th>Deleted</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-active">
                        <td>@item.Id</td>
                        <td>@item.Sender</td>
                        <td>@item.Receiver</td>
                        <td>@item.Text</td>
                        <td>@item.DateTime</td>
                        <td>@item.Deleted</td>
                        <td>
                            <a href="@Url.Action("DeleteMessage","Admin")?id=@(item.Id)">Delete</a> 
                        </td>
                    </tr>
                }

              

            </tbody>
        </table>
    </div>