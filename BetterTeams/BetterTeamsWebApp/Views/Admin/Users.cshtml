

@model List<BetterTeamsWebApp.Models.ViewModels.UserVM>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Users</h2>

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Role</th>
                <th>Date of birth</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-active">
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Role</td>
                    <td>@item.DateOfBirth</td>
                    <td>@item.Active</td>
                    <td>
                        <a href="@Url.Action("EditUser", "Admin")?email=@(item.Email)">Edit</a> |
                        <a href="@Url.Action("DeleteUser","Admin")?email=@(item.Email)">Delete</a>
                    </td>
                </tr>
            }



        </tbody>
    </table>
</div>